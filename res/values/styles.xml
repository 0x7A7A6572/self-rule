<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#46bdbf</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>
    <!-- 全局字体样式-->
    <style name="DefaultFontStyle">
        <item name="android:textSize">18px</item>
        <item name="android:textColor">#0000CC</item>
    </style>

    <!-- 全局背景色-->
    <style name="DefaultBgColor" parent="@style/DefaultFontStyle">
        <item name="android:background">#F2F2F2</item>
    </style>

    <!-- 全局样式-->
    <style name="DefaultStyle" parent="@style/DefaultBgColor"></style>


    <style name="ChessTheme" parent="Theme.AppCompat">
        <item name="colorControlActivated">#ffdc7c</item>
        <item name="colorControlNormal">#000000</item>
        <!--  //colorControlActivated	选中后的颜色
        //colorControlNormal	未选中时的颜色 -->
    </style>
    <style name="My_CheckBox" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorControlActivated">#ffdc7c</item>
        <item name="colorControlNormal">#000000</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/mainColorPrimary</item>
        <item name="colorPrimaryDark">@color/mainColorPrimaryDark</item>
        <item name="colorAccent">@color/mainColorAccent</item>
    </style>

    <color name="mainColorAccent">#FF5252</color>
    <color name="mainColorPrimaryDark">#0097A7</color>
    <color name="mainColorPrimary">#00BCD4</color>
</resources>

